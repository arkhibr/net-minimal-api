# Arquivo .env.example
# Copie este arquivo para .env e configure as vari√°veis para seu ambiente

# Database
# SQLite: Data Source=produtos-api.db
# SQL Server: Server=localhost;Database=ProdutosAPI;User Id=sa;Password=YourPassword;
ASPNETCORE_ConnectionStrings__DefaultConnection=Data Source=produtos-api.db

# Environment
ASPNETCORE_ENVIRONMENT=Development

# Logging
# Levels: Trace, Debug, Information, Warning, Error, Critical
ASPNETCORE_Logging__LogLevel__Default=Information

# Port
ASPNETCORE_URLS=http://localhost:5000

# Serilog
SERILOG__MinimumLevel=Information
SERILOG__WriteTo__0__Name=Console
SERILOG__WriteTo__1__Name=File
SERILOG__WriteTo__1__Args__path=logs/api-.txt
